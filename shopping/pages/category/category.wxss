/* pages/category/category.wxss */
page, .main {
  height: 100%;
}
.content{
  /* min-width: 550rpx; */
}
.category-left {
  float: left;
  width: 150rpx;
  height: 100%;
  border-right: 1px solid #ddd;
  background-color: #F8F8F6;
  box-sizing: border-box;
}
.category-left  .cate-list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #F8F8F6;
  border-bottom: 1rpx solid #fff;
}
.category-left .cate-list.on{
  color: #AB956D;
  background-color: #fff;
}
.category-left .cate-list.on::before{
  content: '';
  position: absolute ;
  display: block;
  left: 3rpx;
  color: #AB956D;
  height: 80rpx;
  line-height: 80rpx;
  border: 4rpx solid #AB956D;
  border-color: #AB956D;

}
.categroy-right {
  float: right;
  width: 600rpx;
  height: 100%;
  /* min-width: 550rpx; */
  overflow: hidden;
}
.cate-box {
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ddd;
  border-top: 1px solid #ddd;
}
.cate-box .cate-banner image{
    display: block;
    width: 100%;
    height: 190rpx;
}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx;
    text-align: center;
    color: #AB956D;
    font-size: 28rpx;
}
.cate-title::before{
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}
.cate-title::after{
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}

.product-list{
    display: inline-block;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    margin:0 20rpx 20rpx 0;
    font-size: 24rpx;
}
.product-list image{
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
}
.product-list:nth-child(3n){
    margin-right: 0;
}