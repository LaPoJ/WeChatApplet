<view class="main">
  <view class="form-box">
    <form bindsubmit="formSubmit">
      <input placeholder="姓名" bindinput="bindName" value="{{address.name}}" />
      <input type="number" value="{{address.phone}}" placeholder="电话号码" bindinput="bindPhone" />
      <input value="{{address.detail}}" placeholder="例如：江西省南昌市青山湖区" bindinput="bindDetail" />
      <button form-type="submit">保存</button>
    </form>
  </view>
</view>